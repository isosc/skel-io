def emit_mpi_comm(event, field='comm'):
    if event[field] == "MPI_COMM_WORLD" or event[field] == "MPI_COMM_SELF" or event[field] == "MPI_COMM_NULL":
        return event[field]
    return "COMM_{}".format(event[field])

